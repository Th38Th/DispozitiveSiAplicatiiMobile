<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dp" />
            <stroke android:width="0.5dp" android:color="@color/ochre_700" />
            <solid android:color="@color/sand_700"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="4dp" />
            <stroke android:width="0.5dp" android:color="@color/ochre_700" />
            <solid android:color="@color/sand_200"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="4dp" />
            <stroke android:width="0.5dp" android:color="@color/ochre_700" />
            <gradient android:angle="90" android:startColor="@color/sand_700" android:endColor="@color/sand_200" />
        </shape>
    </item>
</selector>