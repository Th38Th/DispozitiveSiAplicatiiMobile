<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@integer/material_motion_duration_short_1"
    android:exitFadeDuration="@integer/material_motion_duration_short_2">
    <item android:state_checked="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="4dp" />
            <stroke android:width="2dp" android:color="#00000000" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="4dp" />
            <stroke android:width="2dp" android:color="#00000000" />
            <solid android:color="@color/silver_200" />
        </shape>
    </item>
</selector>