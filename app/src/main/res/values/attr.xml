<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="QuantityView">
        <attr name="minQuantity" format="integer" />
        <attr name="maxQuantity" format="integer" />
        <attr name="startQuantity" format="integer" />
        <attr name="deltaQuantity" format="integer" />
        <attr name="isOutlined" format="boolean" />
        <attr name="colorOfQuantity" format="color" />
        <attr name="colorOfText" format="color" />
    </declare-styleable>
    <declare-styleable name="LoadingIndicator">
        <attr name="currentTaskNameTextAppearance" format="reference"/>
        <attr name="currentTaskName" format="string"/>
        <attr name="statusTextAppearance" format="reference"/>
        <attr name="statusText" format="string"/>
        <attr name="squareProgressIndicator" format="boolean"/>
        <attr name="progressDrawable" format="reference"/>
        <attr name="progressTint" format="reference"/>
        <attr name="progress" format="integer"/>
        <attr name="progressMax" format="integer"/>
        <attr name="statusDisplayStyle" format="enum">
            <enum name="DEFAULT" value="0"/>
            <enum name="PERCENT" value="1"/>
            <enum name="NONE" value="2"/>
        </attr>
    </declare-styleable>
</resources>